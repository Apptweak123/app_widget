<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:background="@drawable/small_size_prayer_background"
    android:theme="@style/Theme.Android.AppWidgetContainer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

            <TextView
                android:id="@+id/small_prayerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Asr"
                android:gravity="start"
                android:textColor="@color/default_color"
                android:text="Asr"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/small_timeFormatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="PM"
                android:gravity="end"
                android:textColor="@color/default_color"
                android:text="PM"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/small_prayerTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="06:04"
                android:gravity="start"
                android:textColor="@color/default_color"
                android:text="06:04"
                android:textSize="44sp"
                android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/small_currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="00:00"
                android:gravity="start"
                android:text="00:00"
                android:textColor="@color/default_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tint="@color/default_color"
                android:src="@drawable/asaricon" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>